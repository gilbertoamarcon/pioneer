<launch>

	<!-- Rosaria -->
	<node pkg="rosaria" type="RosAria" name="RosAria" output="screen">
		<param name="port" value="/dev/rosaria" />
	</node>

	<!-- Sensors -->
	<include file="$(find pioneer)/launch/sensors.launch"/>

	<!-- Move base -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<rosparam file="$(find pioneer)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find pioneer)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find pioneer)/params/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find pioneer)/params/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find pioneer)/params/base_local_planner_params.yaml" command="load" />
	</node>

	<!-- Controller -->
	<include file="$(find pioneer)/launch/controller.launch"/>

	<!-- Description -->
	<include file="$(find pioneer)/launch/description.launch"/>

</launch>
